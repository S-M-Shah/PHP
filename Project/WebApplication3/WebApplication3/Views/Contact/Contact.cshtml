@model WebApplication3.Models.CONTACT
@{
   
    Layout = "~/Views/Shared folder/_Layout2.cshtml";
}

<!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Contact Us</h2>
            </div>
            <div class="col-12">
                <a href="~/User/index">Home</a>
                <a href="">Contact</a>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Contact Start -->
<div class="contact">
    <div class="container">
        <div class="section-header text-center">
            <p>Get In Touch</p>
            <h2>Contact for any query</h2>
        </div>
        <div class="contact-img">
            <img src="~/users/img/contact.jpg" alt="Image">
        </div>
        <div class="contact-form">
            <div id="success"></div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="control-group">
                    @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "form-control",  placeholder = "Enter Your Name" } }) 
                    <p class="help-block text-danger"></p>
                </div>
                <div class="control-group">
                    @Html.EditorFor(model => model.cont_num, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Cont_NUM" } })
                    <p class="help-block text-danger"></p>
                </div>
                <div class="control-group">
                    @Html.EditorFor(model => model.message, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Message" } })
                    <p class="help-block text-danger"></p>
                </div>
                
                <div>
                    <button class="btn btn-custom" type="submit" id="sendMessageButton">Send Message</button>
                </div>
            }
            </div>
        </div>
    </div>
    <!-- Contact End -->
