@model WebApplication3.Models.EVENT
@{
    ViewBag.Title = "formE";
    Layout = "~/Views/Shared folder/_Layout1.cshtml";
}
<h2>Events FORM</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="inputAddress">Event_name</label>
        @Html.EditorFor(model => model.event_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Event_name" } })
    </div>
    <div class="form-group">
        <label for="inputAddress">Venue</label>
        @Html.EditorFor(model => model.venue, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Venue" } })
    </div>
    <div class="form-group">
        <label for="inputAddress">Date</label>
        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Date" } })
    </div>
    <div class="form-group">
        <label for="inputAddress">Time</label>
        @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Time" } })
    </div>

    <button type="submit" class="btn btn-primary">Add Events</button>
}