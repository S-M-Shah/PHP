@model WebApplication3.Models.Acheiv
@{
    ViewBag.Title = "Archform";
    Layout = "~/Views/Shared folder/_Layout1.cshtml";
}

@using (Html.BeginForm("Edit", "Archeive", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="inputAddress">Acheive_name</label>
        @Html.EditorFor(model => model.acheiv_name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label for="inputAddress">Pic</label>
        <input type="file" class="form-control" id="inputAddress" placeholder="1234 Main St" name="img">
    </div>
    <div class="form-group">
        <label for="inputAddress">Date</label>
        @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label for="inputAddress">Remark</label>
        @Html.EditorFor(model => model.remark, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
}